<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CapacidadeLitros">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edtlitro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Informe a quantidade em Litros "
                android:text="" />

            <Button
                android:id="@+id/btnOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ok" />

            <TextView
                android:id="@+id/txtquilolitros"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="" />
            <TextView
                android:id="@+id/txthectalitros"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="" />
            <TextView
                android:id="@+id/txtdecalitro"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="" />
            <TextView
                android:id="@+id/txtdecilitro"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="" />
            <TextView
                android:id="@+id/txtcentilitro"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="" />

            <TextView
                android:id="@+id/txtmililitros"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="" />




        </LinearLayout>

    </ScrollView>
</LinearLayout>



